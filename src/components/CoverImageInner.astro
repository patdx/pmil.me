---
import clsx from 'clsx';

type Props = {
  title: string;
  src?: string;
  href?: string;
};

const { title, src, href } = Astro.props;
---

<img
  src={src}
  alt={`Cover Image for ${title}`}
  class={clsx(
    'shadow-small',
    href && 'hover:shadow-medium transition-shadow duration-200'
  )}
/>
